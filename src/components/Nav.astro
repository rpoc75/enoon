---
interface Props {
  items?: NavItem[];
}

interface NavItem {
  title: string;
  href: string;
}

const { items = [
  { title: "About", href: "/about/index.html" }, 
  { title: "Blog", href: "/blog/index.html" }, 
  { title: "Contact", href: "/contact/index.html" }
] } = Astro.props;
---

<nav class="relative">
  {/* Desktop Navigation */}
  <div class="hidden md:flex gap-8 text-2xl font-semibold tracking-wide text-[var(--color-link)]">
    {items.map(item => (
      <a 
        href={item.href} 
        class="hover:text-[var(--color-link-hover)] transition duration-200"
      >
        {item.title}
      </a>
    ))}
  </div>