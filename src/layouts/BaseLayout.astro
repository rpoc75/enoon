const { title = "SWIFT", description = "A clean, modern theme designed for creators who want speed, clarity, and zero friction." } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
